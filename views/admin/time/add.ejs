<%- include('../cabecalho.ejs') %>

<body>
  <div class="container">
    <h1><i class="fas fa-users"></i> Adicionar Time</h1>

    <form action="" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="nome"><i class="fas fa-tshirt"></i> Clube</label>
        <input type="text" id="nome" name="nome" placeholder="Digite o nome do clube" required>
      </div>

      <div class="form-group">
        <label for="estadio"><i class="fas fa-landmark"></i> Estádio</label>
        <input type="text" id="estadio" name="estadio" placeholder="Digite o estádio" required>
      </div>

      <div class="form-group">
        <label for="datafundacao"><i class="fas fa-calendar-alt"></i> Data de fundação</label>
        <input type="date" id="datafundacao" name="datafundacao" required>
      </div>

      <div class="form-group">
        <label for="escudo"><i class="fas fa-image"></i> Escudo</label>
        <input type="file" id="escudo" name="escudo" accept="image/*" required>
      </div>

      <button type="submit" class="btn">
        <i class="fas fa-plus"></i> Adicionar Time
      </button>
    </form>
  </div>
</body>

</html>
