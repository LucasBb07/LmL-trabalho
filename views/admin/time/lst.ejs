<%- include('../cabecalho.ejs') %>

<body>
    <h1><i class="fas fa-futbol"></i> Times selecionados</h1>
    
    <div class="container">
        <div class="top-bar">
            <div class="add-button">
                <a href="/admin/time/add"><i class="fas fa-user-plus icon"></i> Aumentar time</a>
            </div>
            <form method="post" class="search-bar">
                <input type="text" id="search-input" placeholder="Time ou Jogador..." name="pesquisar">
                <button type="submit"><i class="fas fa-search"></i> Pesquisar</button>
            </form>
        </div>
    
        <table>
            <thead>
                <tr>
                    <th><i class="fas fa-tshirt"></i> Clube</th>
                    <th><i class="fas fa-landmark"></i> Estádio</th>
                    <th><i class="fas fa-calendar-alt"></i> Fundação</th>
                    <th><i class="fas fa-star"></i> Pontos</th>
                    <th><i class="fas fa-shield-alt"></i> Escudo</th>
                    <th><i class="fas fa-tools"></i> Ações</th>
                </tr>
            </thead>
            <tbody>
                <% Times.forEach(function(time){ %>
                    <tr>
                        <td><%= time.nome %></td>
                        <td><%= time.estadio %></td>
                        <td><%= time.datafundacao %></td>
                        <td><%= time.pontos %></td>
                        <td><img class="foto" src="/imagem/<%= time.escudo %>" /></td>
                        <td>
                            <a href="/admin/time/edt/<%= time.id %>"><i class="fas fa-edit"></i> Editar</a>
                            <a href="/admin/time/del/<%= time.id %>"><i class="fas fa-trash"></i> Excluir</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
