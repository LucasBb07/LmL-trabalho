<%- include('../cabecalho.ejs') %>

<body>
    <h1><i class="fas fa-edit"></i> Edição de Time</h1>

    <div class="container">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="nome"><i class="fas fa-tshirt"></i> Clube:</label>
                <input type="text" id="nome" name="nome" value="<%= Time.nome %>" required placeholder="Digite o nome do clube">
            </div>

            <div class="form-group">
                <label for="estadio"><i class="fas fa-landmark"></i> Estádio:</label>
                <input type="text" id="estadio" name="estadio" value="<%= Time.estadio %>" required placeholder="Digite o nome do estádio">
            </div>

            <div class="form-group">
                <label for="datafundacao"><i class="fas fa-calendar-alt"></i> Fundação:</label>
                <input type="date" id="datafundacao" name="datafundacao" value="<%= Time.datafundacao %>" required>
            </div>

            <div class="form-group">
                <label><i class="fas fa-image"></i> Escudo Atual:</label><br>
                <img src="/imagem/<%= Time.escudo %>" class="foto" alt="Escudo do time">
            </div>

            <div class="form-group">
                <label for="escudo"><i class="fas fa-upload"></i> Alterar Escudo:</label>
                <input type="file" id="escudo" name="escudo">
            </div>

            <button type="submit" class="btn">
                <i class="fas fa-save"></i> Efetuar Edição
            </button>
        </form>
    </div>
</body>

</html>
