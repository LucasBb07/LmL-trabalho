<%- include('../cabecalho.ejs') %>


<body>
  <div class="container">
    <form action="" method="post" enctype="multipart/form-data">
      <h1><i class="fas fa-users"></i> Melhorar Elenco</h1>

      <label for="nome"><i class="fas fa-user"></i> Nome</label>
      <input
        type="text"
        id="nome"
        name="nome"
        placeholder="Digite o nome"
        required
      />

      <label for="camisa"><i class="fas fa-hashtag"></i> Número da Camisa</label>
      <input
        type="number"
        id="camisa"
        name="camisa"
        min="1"
        max="99"
        placeholder="Digite o número da camisa"
        required
      />

      <label for="time"><i class="fas fa-landmark"></i> Time</label>
      <select id="time" name="time" class="form-control">
        <option value="">Selecione</option>
        <% Times.forEach(function(time) { %>
        <option value="<%= time.id %>"><%= time.nome %></option>
        <% }) %>
      </select>

      <label for="posicao"><i class="fas fa-map-marker-alt"></i> Posição</label>
      <select id="posicao" name="posicao" required>
        <option value="">Selecione a posição</option>
        <option value="Atacante">Atacante (Ata)</option>
        <option value="Meio-Campo">Meio-Campo (Mei)</option>
        <option value="Defensor">Defensor (Def)</option>
        <option value="Goleiro">Goleiro (Gol)</option>
      </select>

      <label for="fotoJog">Foto</label>
      <input type="file" id="fotoJog" name="fotoJog" />

      <button type="submit" class="btn">
        <i class="fas fa-plus"></i> Melhorar Elenco!
      </button>
    </form>
  </div>
</body>

</html>
