<%- include('../cabecalho.ejs') %>


<body>
  <div class="container">
    <h1><i class="fas fa-edit"></i> Edição de Jogadores</h1>
    <form method="post" enctype="multipart/form-data">
      <label for="nome"><i class="fas fa-user"></i> Nome:</label>
      <input
        type="text"
        id="nome"
        name="nome"
        value="<%= Jogador.nome %>"
        required
        placeholder="Digite o nome"
      />

      <label for="camisa"><i class="fas fa-hashtag"></i> Camisa:</label>
      <input
        type="number"
        id="camisa"
        name="camisa"
        min="1"
        max="99"
        value="<%= Jogador.camisa %>"
        required
        placeholder="Número da camisa"
      />

      <label for="time"><i class="fas fa-landmark"></i> Time:</label>
      <select id="time" name="time" class="form-control" required>
        <option value="">Selecione o time</option>
        <% Times.forEach(function (time) { %>
        <option
          value="<%= time.id %>"
          <%= time.id.toString() === Jogador.time?.toString() ? "selected" : "" %>
        >
          <%= time.nome %>
        </option>
        <% }) %>
      </select>

      <label for="posicao"><i class="fas fa-map-marker-alt"></i> Posição:</label>
      <select id="posicao" name="posicao" required>
        <option value="">Selecione a posição</option>
        <option value="Atacante" <%= Jogador.posicao === "Atacante" ? "selected" : "" %>>
          Atacante (Ata)
        </option>
        <option value="Meio-Campo" <%= Jogador.posicao === "Meio-Campo" ? "selected" : "" %>>
          Meio-Campo (Mei)
        </option>
        <option value="Defensor" <%= Jogador.posicao === "Defensor" ? "selected" : "" %>>
          Defensor (Def)
        </option>
        <option value="Goleiro" <%= Jogador.posicao === "Goleiro" ? "selected" : "" %>>
          Goleiro (Gol)
        </option>
      </select>

      <img src="/imagem/<%= Jogador.fotoJog %>" class="foto" alt="Foto do Jogador" />
      <label for="fotoJog">Foto:</label>
      <input type="file" id="fotoJog" name="fotoJog" />

      <button type="submit" class="btn">
        <i class="fas fa-save"></i> Efetuar Edição
      </button>
    </form>
  </div>
</body>

</html>
