<%- include('../cabecalho.ejs') %>

<body>
    <div class="container">
        <h1><i class="fas fa-edit"></i> Edição das partidas</h1>
        <form action="" method="post">
            <div class="form-group">
                <label for="golcasa"><i class="fas fa-futbol"></i> Gol Casa</label>
                <input
                    type="number"
                    id="golcasa"
                    name="golcasa"
                    min="0"
                    max="99"
                    placeholder="Digite o Gol Casa"
                    value="<%= partida.golcasa %>"
                    required
                >
            </div>

            <div class="form-group">
                <label for="golfora"><i class="fas fa-futbol"></i> Gol Fora</label>
                <input
                    type="number"
                    id="golfora"
                    name="golfora"
                    min="0"
                    max="99"
                    placeholder="Digite o Gol Fora"
                    value="<%= partida.golfora %>"
                    required
                >
            </div>

            <div class="form-group">
                <label for="datapartida"><i class="fas fa-calendar-alt"></i> Data da Partida</label>
                <input
                    type="date"
                    id="datapartida"
                    name="datapartida"
                    placeholder="Digite a data da partida"
                    value="<%= partida.datapartida ? partida.datapartida.toISOString().slice(0,10) : '' %>"
                    required
                >
            </div>

            <button type="submit" class="btn"><i class="fas fa-save"></i> Efetuar Edição</button>
        </form>
    </div>
</body>

</html>
    