<%- include('../cabecalho.ejs') %>

<body>
  <div class="container">
    <h1><i class="fas fa-users"></i> Mais partidas</h1>
    <form action="" method="post">
      <div class="form-group">
        <label for="timedecasa"><i class="fas fa-tshirt"></i> Time da Casa</label>
        <select id="timedecasa" name="timedecasa" required>
          <option value="">Selecione</option>
          <% Times.forEach(function(time) { %>
            <option value="<%= time.id %>"><%= time.nome %></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="timedefora"><i class="fas fa-tshirt"></i> Time de Fora</label>
        <select id="timedefora" name="timedefora" required>
          <option value="">Selecione</option>
          <% Times.forEach(function(time) { %>
            <option value="<%= time.id %>"><%= time.nome %></option>
          <% }) %>
        </select>
      </div>

      <div class="form-group">
        <label for="golcasa"><i class="fas fa-futbol"></i> Gol Casa</label>
        <input
          type="number"
          id="golcasa"
          name="golcasa"
          min="0"
          max="99"
          placeholder="Digite o Gol Casa"
          required
        >
      </div>

      <div class="form-group">
        <label for="golfora"><i class="fas fa-futbol"></i> Gol Fora</label>
        <input
          type="number"
          id="golfora"
          name="golfora"
          min="0"
          max="99"
          placeholder="Digite o Gol Fora"
          required
        >
      </div>

      <div class="form-group">
        <label for="datapartida"><i class="fas fa-calendar-alt"></i> Data da Partida</label>
        <input
          type="date"
          id="datapartida"
          name="datapartida"
          placeholder="Digite a data da partida"
          required
        >
      </div>

      <button type="submit" class="btn">
        <i class="fas fa-plus icon"></i> Aumentar concorrÃªncia!
      </button>
    </form>
  </div>
</body>

</html>
